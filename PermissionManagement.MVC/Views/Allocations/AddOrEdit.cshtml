@model PermissionManagement.MVC.Models.Allocation

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.AllocationID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AllocationID" />
            <div class="row">
                <div class="form-group col-md-6">

                    <label asp-for="ProduitID" class="control-label"></label>
                    <select asp-for="ProduitID" class="form-control" asp-items="ViewBag.ProduitID">
                        <option selected disabled>Enter Product ID...</option>
                    </select>
                    <span asp-validation-for="ProduitID" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="A_Type" class="control-label"></label>
                    <select asp-for="A_Type" class="form-control" >
                        <option selected disabled>Enter Type...</option>
                        <option>Compte </option>
                        <option>Contact</option>
                    </select>
                    <span asp-validation-for="A_Type" class="text-danger"></span>
                </div>
            </div>
            <div class="row">

                <div class="form-group col-md-6">
                    <label asp-for="A_To" class="control-label"></label>
                    <input asp-for="A_To" class="form-control" />
                    <span asp-validation-for="A_To" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="row">

                <div class="form-group col-md-12">
                    <label asp-for="ContactID" class="control-label"></label>
                    <select asp-for="ContactID" class="form-control"  asp-items="ViewBag.ContactID">
                        <option selected disabled>Enter Contact ID...</option>
                        </select>
                        <span asp-validation-for="ContactID" class="text-danger"></span>
                </div>
                </div>
                <hr />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn  btn-primary btn-block btn-md text-white" />
                    <a asp-action="Index" class="btn btn-dark btn-block btn-md text-white">Back to List</a>
                </div>



        </form>

    </div>
    
    </div>

    


