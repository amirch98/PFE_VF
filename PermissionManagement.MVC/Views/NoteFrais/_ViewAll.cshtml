@model IEnumerable<PermissionManagement.MVC.Models.NoteFrais>


<table id="example" class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.montant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.statut)
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Actions
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">

                            <form asp-action="Accept" asp-route-id="@item.NoteFraisID" onsubmit="return jQueryAjaxDelete(this)" class="dropdown-item d-inline">
                                <input type="hidden" asp-for="@item.NoteFraisID" />
                                <input type="submit" value="Accept" class="btn btn-success" />
                            </form>
                            <form asp-action="Refuse" asp-route-id="@item.NoteFraisID" onsubmit="return jQueryAjaxDelete(this)" class="dropdown-item d-inline">
                                <input type="hidden" asp-for="@item.NoteFraisID" />
                                <input type="submit" value="Refuse" class="btn btn-primary" />
                            </form>
                            <form asp-action="Delete" asp-route-id="@item.NoteFraisID" onsubmit="return jQueryAjaxDelete(this)" class="dropdown-item d-inline">
                                <input type="hidden" asp-for="@item.NoteFraisID" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                            </div>
                        </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
