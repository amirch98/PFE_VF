@model PermissionManagement.MVC.Models.PlanMedical

@{
    ViewData["Title"] = "Generate";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Ajout_Produit"  onsubmit="return jQueryAjaxPost(this);">
            <div class="text-danger text-lg-left">@ViewBag.Message</div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="E_Proposed" class="control-label"></label>
                        <input asp-for="E_Proposed" class="form-control" />
                        <span asp-validation-for="E_Proposed" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Frequence" class="control-label"></label>
                        <input asp-for="Frequence" class="form-control" />
                        <span asp-validation-for="Frequence" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="ProduitID" class="control-label"></label>
                        <select asp-for="ProduitID" class="form-control" asp-items="ViewBag.ProduitID">
                            <option selected disabled>Selectionnez Produit</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="generer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}