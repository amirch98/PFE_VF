@model Affectation

@{
    ViewData["Title"] = "CreateA";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateA" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="debut" class="control-label"></label>
                        <input asp-for="debut" class="form-control" />
                        <span asp-validation-for="debut" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="fin" class="control-label"></label>
                        <input asp-for="fin" class="form-control" />
                        <span asp-validation-for="fin" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CompteID" class="control-label"></label>
                        <select asp-for="CompteID" class="form-control" asp-items="ViewBag.CompteID"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Affect" class="btn btn-secondary btn-block btn-md text-white"  />
                <a asp-action="Index" class="btn btn-dark btn-block btn-md text-white">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
