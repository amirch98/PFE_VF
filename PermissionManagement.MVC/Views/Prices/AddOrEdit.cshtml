@model PermissionManagement.MVC.Models.Price

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.PriceID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PriceID" />

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="PriceNom" class="control-label"></label>
                    <input asp-for="PriceNom" class="form-control" />
                    <span asp-validation-for="PriceNom" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">

                    <label asp-for="Context" class="control-label"></label>
                    <select asp-for="Context" class="form-control">
                        <option selected disabled>Enter Context ....</option>
                        <option> Production </option>
                        <option> Achat </option>
                        <option>Vente </option>
                    </select>
                    <span asp-validation-for="Context" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="DateDebut" class="control-label"></label>
                    <input asp-for="DateDebut" class="form-control" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateFin" class="control-label"></label>
                    <input asp-for="DateFin" class="form-control" />
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Currency" class="control-label"></label>
                    <select asp-for="Currency" class="form-control">
                        <option selected disabled>Enter Currency ....</option>
                        <option>   Dinar</option>
                        <option> Dollar </option>
                        <option>Euro </option>
                    </select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-secondary btn-block btn-md text-white"  />
                <a asp-action="Index" class="btn btn-dark btn-block btn-md text-white">Back to List</a>
            </div>
        </form>
    </div>
</div>



    

