@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body, input {
        font-family: 'Poppins', sans-serif;
    }

    .row {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-color: #fff;
        overflow: hidden;
    }

    .forms-container {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }

    form {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .title {
        font-size: 2.2rem;
        color: #444;
        margin-bottom: 10px;
        margin-left: 50%;
    }

    .input-field {
        max-width: 380px;
        width: 40%;
        height: 55px;
        background-color: #f0f0f0;
        margin-top: 10px 0;
        border-radius: 55px;
        display: grid;
        grid-template-columns: 15% 85%;
        padding: 0 .4rem;
        margin-left: 50%;
    }

    #check {
        margin-left: 50%;
    }

    #forgot {
        margin-left: 50%;
    }

    #resend {
        margin-left: 50%;
    }

    #icon {
        text-align: center;
        line-height: 55px;
        color: #acacac;
    }

    #input {
        background: none;
        outline: none;
        border: none;
        line-height: 1;
        font-weight: 600;
        font-size: 1.1rem;
        color: #333;
    }

        #input::placeholder {
            color: #aaa;
            font-weight: 500;
        }

    .btn {
        width: 150px;
        height: 49px;
        border: none;
        outline: none;
        border-radius: 49px;
        background-color: #5995fd;
        color: #fff;
        text-transform: uppercase;
        font-weight: 600;
        margin: 10px 0;
        transition: .5s;
        margin-left: 50%;
    }

        .btn:hover {
            background-color: #4d84e2;
        }

    .img {
        margin-top: 5%;
        width: 50%;
        height: 80%;
    }

    #p {
        position: relative;
        font-family: sans-serif;
        text-transform: uppercase;
        font-size: 2em;
        letter-spacing: 4px;
        overflow: hidden;
        background: linear-gradient(90deg, #000, #fff, #000);
        background-repeat: no-repeat;
        background-size: 80%;
        animation: animate 3s linear infinite;
        -webkit-background-clip: text;
        -webkit-text-fill-color: rgba(255,255,255,0);
        background-color: #333;
    }

    @@-webkit-keyframes animate {
        0% {
            background-position: -500%;
        }
    }

    .wave {
        position: fixed;
        bottom: 0;
        left: 0;
        height: 100%;
        z-index: -1;
    }
</style>


<body style="background-color:white;">
    <div class="row">
        <div>
            <img src="~/image/undraw_medical_care_movn.png" class="img" />
            <section>
                <form class="forms-container" method="post">

                    <h4 class="title" id="p">  @ViewData["Title"]   </h4>
                    <hr />

                    <div class="input-field">
                        <i class="fas fa-user" id="icon"></i>
                        <input asp-for="Input.Email" placeholder="enter email address" id="input" />

                    </div>
                    <br />
                    <div class="input-field">
                        <i class="fas fa-lock" id="icon"></i>

                        <input asp-for="Input.Password" placeholder="enter password" id="input" />

                    </div>

                    <div class="form-group" id="check">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn">validate</button>



                    <a id="forgot" href="./ForgotPassword">Forgot your password?</a>



                    <a id="resend" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>


                </form>
            </section>
        </div>
        <div>
            <section>

                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>

                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}